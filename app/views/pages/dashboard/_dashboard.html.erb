<% if current_user.user_type == 'host' %>
  <div class='row'><h2 style='text-align:center; width:1080px; color:black;' id='dashboard-title'>Host Dashboard</h2></div>
    <div class="row" id="tabs" style='text-align:center; width:1080px'>
      <div class="col-sm-3"> <%= link_to 'Listings', units_path, :id=>'overview' %> </div>
      <div class="col-sm-2"> <%= link_to 'Earnings', dashboard_path, :id=>'companies' %> </div>
      <div class="col-sm-2"> <%= link_to 'Cleaners', user_table_path, :id=>'users' %> </div>
      <div class="col-sm-2"> <%= link_to 'History', root_path, :id=>'alerts' %> </div>
      <div class="col-sm-3"> <%= link_to 'FAQ', root_path, :id=>'notes-link' %> </div>
    </div>

    <div class="row" id="row1">
      <%= render upcoming_bookings_card_partial_path %>
      <%= render earnings_card_partial_path %>
      <%= render pending_bookings_card_partial_path %>
      <%= render approved_bookings_card_partial_path %>
    </div>

    <div class="row">
      <%= render calendar_card_partial_path %>
    </div>
  </div>
