<% if current_user.user_type == 'host' %>
  <div class="col-sm-3"id="account">
    <h1 style="text-align:center;font-weight: 200;font-size: 2rem;"> Earnings Summary </h1>
    <h3><b>All-Time Paid Out</b> <%= GetPrice::TotalEarnings.new(current_user).execute %></h3>
    <h3><b>Potential Payouts</b> <%= GetPrice::PotentialEarnings.new(current_user).execute %></h3>
    <h3><b>Monthly Payouts</b> <%= GetPrice::MonthlyEarnings.new(current_user).execute %></h3>
  </div>
<% elsif current_user.user_type == 'cleaner' %>
  <div class="col-sm-3"id="account">
    <h1 style="text-align:center;font-weight: 200;font-size: 2rem;"> Earnings Summary </h1>
    <h3><b>All-Time Earnings</b> <%= GetPrice::TotalEarnings.new(current_user).execute %></h3>
    <h3><b>Potential Earnings</b> <%= GetPrice::PotentialEarnings.new(current_user).execute %></h3>
    <h3><b>Monthly Earnings</b> <%= GetPrice::MonthlyEarnings.new(current_user).execute %></h3>
  </div>
<% end %>
