<div class="col-sm-3"id="trial">
    <b><h1 style='text-align:center' id='dashboard-cards-title'> Upcoming Cleanings</h1></b>

    <p id='dashboard-cards-text'>
        <%= @upcoming_bookings&.sort_by do |booking|
        (booking&.starts_at.to_time - Time.current.to_time).abs
        end.first&.unit&.name %>
        <%= @upcoming_bookings&.sort_by do |booking|
          (booking&.starts_at&.to_time - Time.current.to_time).abs
          end.first&.starts_at&.strftime("%m/%d/%Y") %>       </p>

      <p id='dashboard-cards-text'>
        <%= @upcoming_bookings&.sort_by do |booking|
        (booking&.starts_at&.to_time - Time.current.to_time).abs
        end.second&.unit&.name %>
        <%= @upcoming_bookings&.sort_by do |booking|
          (booking&.starts_at&.to_time - Time.current.to_time).abs
          end.second&.starts_at&.strftime("%m/%d/%Y") %>      </p>

</div>
