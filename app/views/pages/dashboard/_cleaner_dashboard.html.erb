<div class="container-fluid">
  <div class='wrapper'>
  <div class="row" id="parent">
    <p>Parent Account</p>
  <div class='row'>
    <div style='margin-left:3rem;' id='<%=@user.state%>'>
      <%= @user.state %>
    </div>
  </div>


    <div class="col-sm-10">
      <h2>Marketing Moguls</h2>
    </div>

    <div class="col-sm-2" id="client-btn-row">
      <%= link_to 'Client View', root_path, :id => "client-btn", class: 'btn btn-primary' %>
    </div>

  </div>

  <div class="row" id="tabs">
    <div class="col-sm-1"> <%= link_to 'Overview', main_feed_path %> </div>
    <div class="col-sm-1"> <%= link_to 'Companies', dashboard_path %> </div>
    <div class="col-sm-1"> <%= link_to 'Users', user_table_path %> </div>
    <div class="col-sm-1"> <%= link_to 'Invoices', root_path %> </div>
    <div class="col-sm-1"> <%= link_to 'Alerts', root_path %> </div>
    <div class="col-sm-2"> <%= link_to 'Notes', root_path %> </div>
  </div>



      <div class="row" id="row1">

        <%= render trial_card_partial_path %> <%#this is a helper method that shows x days left or trial paused depending on user trial_paused vlaue %>

        <div class="col-sm-3"id="account">
          <h1 style='text-align:center' id='user-name'><%= current_user.email %></h1>
          <h3><b>Member Since</b> <%= current_user.created_at.strftime("%B %d") %></h3>
          <h3><b>Member Type</b> <%= current_user.user_type %></h3>
        </div>

        <div class="col-sm-3"id="pending-bookings">
          <h1 style='text-align:center' id='user-posts'><%= @pending_bookings %></h1>
          <h3 style='text-align:center'><b><%= link_to 'Pending Reservations', bookings_path(status: 'pending')%> </b></h3>
        </div>

        <div class="col-sm-3"id="approved-bookings">
          <h1 style='text-align:center' id='total-bookings'><%= @approved_bookings%></h1>
          <h3 style='text-align:center'><b><%= link_to 'Approved Reservations', approved_bookings_path %> </b></h3>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-12"id="billing">
          <h3>Billing and Invoicing</h3>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6"id="pro">
          <h3>Pro</h3>
        </div>

        <div class="col-sm-3"id="notes">
          <h3>Notes</h3>
        </div>

        <div class="col-sm-3"id="actions">
          <h3>Actions</h3>
        </div>
      </div>
      </div>

</div>
